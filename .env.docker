# Laravel Application Environment Variables for Docker
# Copy this file to .env and update with your production values

# Application
APP_NAME="Car Rental System"
APP_ENV=production
APP_KEY=base64:kmgc+nEwNHN0xcORP37dhXrtELuP5yEZO96+lKY8CRY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=http://localhost:8080
APP_PORT=8080

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (Docker)
# The DB_HOST should be 'db' for docker-compose service
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=car_rental_system_db
DB_USERNAME=carrent_user
DB_PASSWORD=secret
DB_ROOT_PASSWORD=rootsecret
DB_EXTERNAL_PORT=3307

# Alternative: PostgreSQL Configuration
# Uncomment these and comment MySQL if using PostgreSQL
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=car_rental_system_db
# DB_USERNAME=carrent_user
# DB_PASSWORD=secret
# DB_EXTERNAL_PORT=5433

# Cache & Session (Using Redis in Docker)
CACHE_STORE=redis
CACHE_PREFIX=carrent_cache

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Redis Configuration (Docker)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_EXTERNAL_PORT=6380

# Mail Configuration
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@carrentalsystem.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"
